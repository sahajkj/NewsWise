    <script>

        function getCurrentTarget() {
            var activeTab = document.querySelector('.tab-pane.fade.show.active');
            return activeTab.id;
        }

        var CheckAnswer = document.getElementById("quizsub");
        CheckAnswer.addEventListener("click", function (event) {
            if (!isFormValid()) {
                event.preventDefault(); // 阻止按钮的默认操作
                alert("Please answer all questions!"); // 弹出提示窗口
            }
        });
        function isFormValid() {
            var isValid = true;
            var requiredRadios = document.querySelectorAll('input[type="radio"][required]');
            requiredRadios.forEach(function (radio) {
                var radioName = radio.getAttribute('name');
                var radioGroup = document.querySelectorAll('input[name="' + radioName + '"]');
                var radioChecked = false;
                radioGroup.forEach(function (radioOption) {
                    if (radioOption.checked) {
                        radioChecked = true;
                    }
                });
                if (!radioChecked) {
                    isValid = false;
                }
            });
            return isValid;
        }
        function goBack() {
            var currentTarget = getCurrentTarget();
            var tabLinks = document.querySelectorAll('[data-bs-toggle="tab"]');
            for (var i = 0; i < tabLinks.length; i++) {
                if (tabLinks[i].getAttribute('data-bs-target') == '#' + currentTarget) {
                    tabLinks[i - 1].click();
                    break;
                }
            }
        }
        function goForward() {
            var currentTarget = getCurrentTarget();
            var tabLinks = document.querySelectorAll('[data-bs-toggle="tab"]');
            for (var i = 0; i < tabLinks.length; i++) {
                if (tabLinks[i].getAttribute('data-bs-target') == '#' + currentTarget) {
                    tabLinks[i + 1].click();
                    break;
                }
            }
        }

        $(function () {

            $('input[type="radio"]').click(function () {

                var questionId = $(this).data('question-id');

                $('li.nav-item[data-question-id="' + questionId + '"]').addClass('answered');
            });
        });
        $(function () {
            $('input[type="radio"]').change(function () {
                var currentTarget = getCurrentTarget();
                var tabLinks = document.querySelectorAll('[data-bs-toggle="tab"]');
                for (var i = 0; i < tabLinks.length; i++) {
                    if (tabLinks[i].getAttribute('data-bs-target') == '#' + currentTarget) {
                        tabLinks[i + 1].click();
                        break;
                    }
                }

            });
        });

    </script>

